            android:name="com.example.androidtest.receiver.PushDemoReceiver"
            android:exported="false" >
            <intent-filter>

                <!-- APPID需要替换为相应的个推应用ID -->
                <action android:name="com.igexin.sdk.action.vSeqzmbPWcAS1GWbGxLrxA" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.example.androidtest.activity.GeTuiAty"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>