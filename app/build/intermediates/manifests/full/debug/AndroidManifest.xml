            android:value="yKy71hq75w8TqZ7MZmjJU9" />
 <!-- 替换为第三方应用的APPKEY -->
        <meta-data
            android:name="PUSH_APPSECRET"
            android:value="RwLyrIm3ujAlg5ErsSGHD" />
 <!-- 替换为第三方应用的APPSECRET -->
